<p id="notice"><%= notice %></p>

<%= link_to 'Notifications', notifications_path %><br><br>

<h1>Notification Channels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject template</th>
      <th>Body template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notification_channels.each do |notification_channel| %>
      <tr>
        <td><%= notification_channel.name %></td>
        <td><%= notification_channel.subject_template %></td>
        <td><%= notification_channel.body_template %></td>
        <td><%= link_to 'Show', notification_channel %></td>
        <td><%= link_to 'Edit', edit_notifications_channel_path(notification_channel) %></td>
        <td><%= link_to 'Destroy', notification_channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

