<p id="notice"><%= notice %></p>

<h1>Notifications</h1>

<%= link_to 'New Notification Broadcast', new_notifications_broadcast_path %><br><br>
<%= link_to 'View Notification Channels', notifications_channels_path %><br><br>
<%= link_to 'Manage Preferences', notifications_preferences_path %><br><br>

<% @notifications.each do |notification| %>
  <details>
    <summary><%= notification.to_notification.subject %></summary>
    <div>
      <%= notification.to_notification.body %>
    </div>
  </details>
<% end %>
