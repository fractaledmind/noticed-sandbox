<p id="notice"><%= notice %></p>

<h1>Notification Permissions</h1>

<table>
  <thead>
    <tr>
      <th>Channel</th>
      <th>User</th>
      <th>Local</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notification_permissions.each do |notification_permission| %>
      <tr>
        <td><%= notification_permission.channel_id %></td>
        <td><%= notification_permission.user_id %></td>
        <td><%= notification_permission.local %></td>
        <td><%= notification_permission.email %></td>
        <td><%= link_to 'Show', notification_permission %></td>
        <td><%= link_to 'Edit', edit_notification_permission_path(notification_permission) %></td>
        <td><%= link_to 'Destroy', notification_permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification Permission', new_notification_permission_path %>
